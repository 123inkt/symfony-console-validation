{
    "name": "digitalrevolution/symfony-console-validation",
    "description": "Symfony command input argument and option validation",
    "type": "symfony-bundle",
    "license": "MIT",
    "minimum-stability": "stable",
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        },
        "lock": false
    },
    "require": {
        "php": ">=8.1",
        "digitalrevolution/symfony-validation-shorthand": "^1.0.4 || ^2.0.0",
        "symfony/console": "^6.2 || ^7.0 || ^8.0",
        "symfony/validator": "^6.2  || ^7.0 || ^8.0"
    },
    "require-dev": {
        "digitalrevolution/phpunit-file-coverage-inspection": "^v3.0.0",
        "phpmd/phpmd": "^2.14",
        "phpstan/phpstan": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpstan/phpstan-strict-rules": "^2.0",
        "phpstan/extension-installer": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "DigitalRevolution\\SymfonyConsoleValidation\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DigitalRevolution\\SymfonyConsoleValidation\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "check": ["@check:phpstan", "@check:phpmd", "@check:phpcs"],
        "check:phpstan": "phpstan analyse",
        "check:phpmd": "phpmd src,tests text phpmd.xml.dist --suffixes php",
        "check:phpcs": "phpcs src tests",
        "fix": "@fix:phpcbf",
        "fix:phpcbf": "phpcbf src tests",
        "test": "phpunit",
        "test:integration": "phpunit --testsuite integration",
        "test:unit": "phpunit --testsuite unit"
    }
}
